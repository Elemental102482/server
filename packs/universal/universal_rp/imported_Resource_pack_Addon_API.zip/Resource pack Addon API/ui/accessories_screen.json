{
    "namespace": "accessories",

    "toolbar": {
        "type": "image",
        "texture": "textures/ui/toolbar_background",
        "size": [
            "100%cm + 12px",
            26
        ],
        "offset": [ 0, 3 ],
        "anchor_from": "top_right",
        "anchor_to": "bottom_right",
        "controls": [
            {
                "close_button_panel": {
                    "type": "panel",
                    "size": [ 15, "100%" ],
                    "bindings": [
                        {
                            "binding_name": "#close_button_visible",
                            "binding_name_override": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "close_button@common.light_close_button": {
                                "offset": [ 0, 0 ],
                                "anchor_from": "center",
                                "anchor_to": "center"
                            }
                        }
                    ]
                }
            }
        ]
    },

    "highlight_slot_panel": {
        "type": "panel",
        "$label_name|default": "",
        "controls": [
            {
                "highlight@common.highlight_slot": {
                    "controls": [
                        {
                            "hover_text": {
                                "type": "custom",
                                "renderer": "hover_text_renderer",
                                "allow_clipping": false,
                                "layer": 20,
                                "property_bag": {
                                    "#hover_text": "$label_name"
                                },
                                "bindings": [
                                    {
                                        "binding_type": "collection_details",
                                        "binding_collection_name": "$item_collection_name"
                                    },
                                    {
                                        "binding_name": "#item_id_aux",
                                        "binding_type": "collection",
                                        "binding_collection_name": "$item_collection_name",
                                        "binding_condition": "none"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(not(#item_id_aux > 0))",
                                        "target_property_name": "#visible"
                                    }
                                ]
                            }
                        },
                        {
                            "hover_text@common.hover_text": {
                                "layer": 29,
                                "$hover_text_binding_name|default": "#hover_text",
                                "bindings": [
                                    {
                                        "binding_name": "$hover_text_binding_name",
                                        "binding_name_override": "#hover_text",
                                        "binding_type": "collection",
                                        "binding_collection_name": "$item_collection_name"
                                    },
                                    {
                                        "binding_name": "#item_id_aux",
                                        "binding_type": "collection",
                                        "binding_collection_name": "$item_collection_name",
                                        "binding_condition": "none"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(#item_id_aux > 0)",
                                        "target_property_name": "#visible"
                                    }
                                ]
                            }
                        }
                    ],
                    "bindings": [
                        {
                            "binding_name": "#show_persistent_bundle_hover_text",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            },
            {
                "white_border@common.white_border_slot": {
                    "bindings": [
                        {
                            "binding_name": "#show_persistent_bundle_hover_text",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            }
        ]
    },

    "accessories_overlay": {
        "type": "image",
        "layer": 2,
        "size": [ 16, 16 ],
        "bindings": [
            {
                "binding_type": "collection_details",
