{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.stone_golem.move": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"move": "q.ground_speed>0.7"
						}
					],
					"blend_transition": 0.4
				},
				"move": {
					"animations": [
						"move"
					],
					"transitions": [
						{
							"idle": "q.ground_speed<0.4"
						}
					],
					"blend_transition": 0.4
				}
			}
		},
		"controller.animation.stone_golem.attack": {
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_delayed_attacking==1"
						}
					],
					"blend_transition": 0.4
				},
				"attack": {
					"animations": [
						"attack"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.4
				}
			}
		}
	}
}