		"events": {
			"start_despawn_timer": {
				"add": {
					"component_groups": [
						"despawn_timer"
					]
				},
				"remove": {
					"component_groups": [
						"spawn"
					]
				}
			},
			"despawn": {
				"queue_command": {
					"command": [
						"particle cata:plasma_hive_despawn ~ ~ ~",
						"summon cata:plasma ~ ~ ~"
					]
				},
				"add": {
					"component_groups": [
						"despawn"
					]
				}
			},
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"spawn"
					]
				}
			}
		}
	}
}