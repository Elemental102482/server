{
	"format_version": "1.21.80",
	"minecraft:entity": {
		"description": {
			"identifier": "cata:plasma_hive",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"runtime_identifier": "minecraft:vex",
			"scripts": {
				"animate": [
					"summon_controller"
				]
			},
			"animations": {
				"summon": "animation.plasma.summon",
				"summon_controller": "controller.animation.plasma_hive.summon_controller"
			}
		},
		"component_groups": {
			"despawn_timer": {
				"minecraft:timer": {
					"looping": true,
					"time": [
						25,
						25
					],
					"time_down_event": {
						"event": "despawn"
					}
				}
			},
			"despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				}
			},
			"spawn": {
				"minecraft:environment_sensor": {
					"triggers": {
						"filters": [
							{
								"test": "has_target",
								"value": true
							}
						],
						"event": "start_despawn_timer"
					}
				}
			}
		},
		"components": {
			"minecraft:health": {
				"value": 25
			},
			"minecraft:physics": {
				"has_collision": true,
				"has_gravity": false,
				"push_towards_closest_space": true
			},
			"minecraft:nameable": {},
			"minecraft:movement": {
				"value": 0.01
			},
			"minecraft:movement.basic": {},
			"minecraft:collision_box": {
				"width": 1.3,
				"height": 1.2
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"entity_types": {
					"max_dist": 24,
					"walk_speed_multiplier": 0.5,
					"sprint_speed_multiplier": 0.5,
					"filters": {
						"test": "is_family",
						"subject": "other",
						"value": "player"
					},
					"must_see": true
				}
			},
			"minecraft:follow_range": {
				"value": 32,
				"max": 32
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/plasma_hive.json"
			},
			"minecraft:behavior.follow_mob": {
				"priority": 0,
				"start_distance": 16,
				"stop_distance": 10,
				"search_range": 32,
				"filters": {
					"all_of": [
						{
							"test": "is_family",
							"subject": "other",
							"operator": "==",
							"value": "player"
						}
					]
				}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player?10:0"
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "fall",
					"deals_damage": "no"
				}
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:type_family": {
				"family": [
					"plasma_hive",
					"monster",
					"mob"
				]
			},
			"minecraft:behavior.summon_entity": {
				"priority": 1,
				"summon_choices": [
					{
						"do_casting": true,
						"cast_duration": 1.75,
						"cooldown_time": 5,
						"weight": 1,
						"sequence": [
							{
								"shape": "circle",
								"target": "self",
								"base_delay": 0,
								"delay_per_summon": 0,
								"num_entities_spawned": 0,
								"summon_cap_radius": 0,
								"entity_lifespan": 0
							}
						]
					}
				]
			},
			"minecraft:fire_immune": true
