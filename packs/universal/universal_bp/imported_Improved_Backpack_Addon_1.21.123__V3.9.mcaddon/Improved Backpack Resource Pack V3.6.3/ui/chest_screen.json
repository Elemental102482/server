{
  "namespace": "chest",

  "chest_label": {
    "$new_container_title|default": "$container_title",
    "text": "$new_container_title"
  },	
  
  "small_chest_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": true,
	"$use_custom_pocket_toast|default": false,
	"use_custom_pocket_toast": "$use_custom_pocket_toast",
    "close_on_player_hurt": "$close_on_player_hurt",
	"$backpack_background|default": "common.dialog_background_opaque",
    "$new_container_title|default": "$container_title", //title of container
    "$container_size|default": 27, //default size if nothing matches   
	"modifications":[	
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "(not(($new_container_title - 'Small Backpack') = $new_container_title))",	
				"$screen_content": "improved_backpack.backpack_panel",
				"$new_container_title": "Backpack",
				"$backpack_background": "improved_backpack.bg_bp_small"
			}
		},
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "(not(($new_container_title - 'Medium Backpack') = $new_container_title))",	
				"$screen_content": "improved_backpack.backpack_panel",
				"$new_container_title": "Backpack",
				"$backpack_background": "improved_backpack.bg_bp_medium"
			}
		},
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "(not(($new_container_title - 'Big Backpack') = $new_container_title))",				
				"$screen_content": "improved_backpack.backpack_panel",
				"$new_container_title": "Backpack",
				"$backpack_background": "improved_backpack.bg_bp_big"
			}
		},
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "(not(($new_container_title - 'XL Backpack') = $new_container_title))",				
				"$screen_content": "improved_backpack.backpack_panel",
				"$new_container_title": "Backpack",
				"$backpack_background": "improved_backpack.bg_bp_xl"
			}
		},
		//
		// BACKUP CONDITIONS
		//
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "(not(($new_container_title - 'container_entity_new') = $new_container_title))",			
				"$screen_content": "improved_backpack.backpack_panel",
				"$new_container_title": "Backpack (Default)",
				"$backpack_background": "improved_backpack.bg_bp_small"
			}
		}
	]	
  }
}